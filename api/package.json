{
  "name": "promo-api",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.18.0"
  },
  "scripts": {
    "dev": "tsx watch --tsconfig ./config/tsconfig.dev.json src/server.ts",
    "build": "tsc -p ./config/tsconfig.json",
    "typecheck": "tsc -p ./config/tsconfig.production.json --noEmit",
    "start": "node dist/server.js",
    "test": "tsx --tsconfig ./config/tsconfig.test.json ./node_modules/mocha/bin/mocha tests/**/*.spec.ts --timeout 10000",
    "test:watch": "tsx --tsconfig ./config/tsconfig.test.json ./node_modules/mocha/bin/mocha --watch tests/**/*.spec.ts --timeout 10000"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongodb": "^6.18.0",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/supertest": "^6.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "chai": "^6.0.1",
    "mocha": "^11.7.1",
    "supertest": "^7.1.4",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
